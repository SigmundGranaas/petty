{
  "_stylesheet": {
    "defaultPageMaster": "default",
    "pageMasters": {
      "default": {
        "size": "Letter",
        "margins": "20mm"
      }
    },
    "styles": {
      "header": { "fontSize": "24pt", "color": "#2a4d69" },
      "report-title": { "fontSize": "16pt", "color": "#4b86b4", "marginBottom": "15pt" },
      "section-title": {
        "fontSize": "14pt", "fontWeight": "bold", "color": "#2a4d69",
        "marginTop": "10pt", "marginBottom": "5pt",
        "paddingBottom": "2pt",
        "borderBottom": "1pt solid #adcbe3"
      },
      "p": { "fontSize": "11pt", "lineHeight": "15pt" },
      "td": { "padding": "4pt 5pt" },
      "td-numeric": { "textAlign": "Right" },
      "td-subtotal": { "fontWeight": "bold", "borderTop": "0.5pt solid #cccccc" },
      "td-total": { "fontWeight": "bold", "borderTop": "0.5pt solid #2a4d69", "borderBottom": "2pt double #2a4d69" }
    }
  },
  "_template": {
    "type": "Block",
    "children": [
      {
        "type": "Paragraph", "styleNames": ["header"], "children": [{ "type": "Text", "content": "{{companyName}}" }]
      },
      {
        "type": "Paragraph", "styleNames": ["report-title"], "children": [{ "type": "Text", "content": "{{reportTitle}} | {{reportDate}}" }]
      },
      {
        "each": "sections",
        "template": {
          "type": "Block",
          "children": [
            { "type": "Paragraph", "styleNames": ["section-title"], "children": [{ "type": "Text", "content": "{{title}}" }] },
            {
              "each": "tables",
              "template": {
                "type": "Block",
                "children": [
                  {
                    "each": "data",
                    "template": {
                      "type": "Paragraph",
                      "styleNames": ["p"],
                      "children": [
                        { "type": "Text", "content": "{{label}}: " },
                        { "type": "Text", "content": "{{value}}" }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}