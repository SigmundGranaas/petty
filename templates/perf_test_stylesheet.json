{
  "page": {
    "size": "Letter",
    "margins": { "top": 50, "right": 50, "bottom": 50, "left": 50 },
    "footer_height": 30,
    "footer_text": "Report ID: {{id}} | Page {{page_num}}",
    "footer_style": "footer"
  },
  "styles": {
    "pageTitle": { "font_size": 24, "font_weight": "Bold", "color": {"r": 20, "g": 40, "b": 80}, "margin": {"bottom": 25}},
    "headerBox": {
      "padding": {"top": 10, "bottom": 10, "left": 15, "right": 15},
      "background_color": {"r": 247, "g": 247, "b": 247},
      "margin": {"bottom": 30}
    },
    "userName": { "font_size": 16, "font_weight": "Bold", "color": {"r": 20, "g": 40, "b": 80} },
    "accountInfo": { "font_size": 12, "color": {"r": 100, "g": 100, "b": 100} },
    "sectionHeader": { "font_size": 14, "font_weight": "Bold", "margin": {"bottom": 10}, "padding": {"bottom": 5}, "border_bottom": {"width": 1, "style": "Solid", "color": {"r": 200, "g": 200, "b": 200}}},

    "th": {
      "font_weight": "Bold", "text_align": "Left",
      "color": {"r": 80, "g": 80, "b": 80},
      "padding": {"top": 8, "bottom": 8, "left": 6, "right": 6},
      "border_bottom": {"width": 2, "style": "Solid", "color": {"r": 80, "g": 80, "b": 80}}
    },
    "th-currency": {
      "font_weight": "Bold", "text_align": "Right",
      "color": {"r": 80, "g": 80, "b": 80},
      "padding": {"top": 8, "bottom": 8, "left": 6, "right": 6},
      "border_bottom": {"width": 2, "style": "Solid", "color": {"r": 80, "g": 80, "b": 80}}
    },
    "td": {
      "padding": {"top": 7, "bottom": 7, "left": 6, "right": 6}, "font_size": 10,
      "border_bottom": {"width": 1, "style": "Solid", "color": {"r": 235, "g": 235, "b": 235}}
    },
    "td-currency": {
      "padding": {"top": 7, "bottom": 7, "left": 6, "right": 6}, "font_size": 10, "text_align": "Right",
      "border_bottom": {"width": 1, "style": "Solid", "color": {"r": 235, "g": 235, "b": 235}}
    },

    "summary-table": { "margin": { "top": 20 } },
    "summary-label-cell": { "text_align": "Right", "padding": {"top": 4, "right": 10, "bottom": 4, "left": 6}, "font_size": 11, "color": {"r": 80, "g": 80, "b": 80} },
    "summary-value-cell": { "text_align": "Right", "padding": {"top": 4, "right": 6, "bottom": 4, "left": 6}, "font_size": 11 },
    "summary-total-label-cell": {
      "text_align": "Right", "padding": {"top": 8, "right": 10, "bottom": 4, "left": 6}, "font_size": 14, "font_weight": "Bold",
      "border_top": {"width": 1.5, "style": "Solid", "color": {"r": 0, "g": 0, "b": 0}}
    },
    "summary-total-value-cell": {
      "text_align": "Right", "padding": {"top": 8, "right": 6, "bottom": 4, "left": 6}, "font_size": 14, "font_weight": "Bold",
      "border_top": {"width": 1.5, "style": "Solid", "color": {"r": 0, "g": 0, "b": 0}}
    },

    "footer": { "font_size": 9, "color": {"r": 150, "g": 150, "b": 150}, "text_align": "Center" }
  },
  "templates": {
    "recordPage": {
      "name": "recordPage",
      "children": [
        { "type": "Text", "content": "Transaction Summary", "style": "pageTitle" },
        {
          "type": "Container", "style": "headerBox",
          "children": [
            { "type": "Text", "content": "{{user.name}}", "style": "userName" },
            { "type": "Text", "content": "Account: {{user.account}}", "style": "accountInfo" }
          ]
        },
        { "type": "Text", "content": "Details", "style": "sectionHeader" },
        {
          "type": "Table", "data_source": "/items",
          "columns": [
            { "header": "Item", "data_field": "/description", "width": {"Percent": 55}, "header_style": "th", "style": "td" },
            { "header": "Qty", "data_field": "/quantity", "width": {"Percent": 15}, "header_style": "th-currency", "style": "td-currency" },
            { "header": "Unit Price", "data_field": "/price", "width": {"Percent": 15}, "header_style": "th-currency", "style": "td-currency", "content_template": "{{formatCurrency price}}" },
            { "header": "Total", "data_field": "/line_total", "width": {"Percent": 15}, "header_style": "th-currency", "style": "td-currency", "content_template": "{{formatCurrency line_total}}" }
          ]
        },
        {
          "type": "Table", "style": "summary-table", "data_source": "/",
          "columns": [
            { "header": "", "data_field": "", "width": {"Percent": 85}, "style": "summary-label-cell", "content_template": "Subtotal:" },
            { "header": "", "data_field": "", "width": {"Percent": 15}, "style": "summary-value-cell", "content_template": "{{formatCurrency summary.total}}" }
          ]
        },
        {
          "type": "Table", "data_source": "/",
          "columns": [
            { "header": "", "data_field": "", "width": {"Percent": 85}, "style": "summary-label-cell", "content_template": "Tax (8%):" },
            { "header": "", "data_field": "", "width": {"Percent": 15}, "style": "summary-value-cell", "content_template": "{{formatCurrency summary.tax}}" }
          ]
        },
        {
          "type": "Table", "data_source": "/",
          "columns": [
            { "header": "", "data_field": "", "width": {"Percent": 85}, "style": "summary-total-label-cell", "content_template": "Grand Total:" },
            { "header": "", "data_field": "", "width": {"Percent": 15}, "style": "summary-total-value-cell", "content_template": "{{formatCurrency summary.grand_total}}" }
          ]
        }
      ]
    }
  },
  "page_sequences": {
    "main_sequence": { "template": "recordPage", "data_source": "/records" }
  }
}