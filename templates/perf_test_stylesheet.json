{
  "page": {
    "size": "Letter",
    "margins": { "top": 40, "right": 40, "bottom": 40, "left": 40 },
    "footer_height": 30,
    "footer_text": "Report ID: {{id}} | Page {{page_num}} of {{total_pages}}",
    "footer_style": "footer"
  },
  "styles": {
    "pageTitle": { "font_size": 18, "font_weight": "Bold", "color": {"r": 20, "g": 40, "b": 80}, "margin": {"bottom": 20}},
    "headerBox": {
      "padding": {"top": 15, "bottom": 15, "left": 15, "right": 15},
      "background_color": {"r": 240, "g": 245, "b": 250},
      "border": {"width": 1, "style": "Solid", "color": {"r": 210, "g": 220, "b": 230}},
      "margin": {"bottom": 25}
    },
    "userName": { "font_size": 14, "font_weight": "Bold" },
    "accountInfo": { "font_size": 11, "color": {"r": 100, "g": 100, "b": 100} },
    "hr": { "height": 1, "background_color": {"r": 200, "g": 200, "b": 200}, "margin": {"top": 25, "bottom": 15} },
    "th": {
      "font_weight": "Bold", "text_align": "Left",
      "color": {"r": 255, "g": 255, "b": 255},
      "background_color": {"r": 70, "g": 85, "b": 105},
      "padding": {"top": 8, "bottom": 8, "left": 6, "right": 6}
    },
    "td": { "padding": {"top": 6, "bottom": 6, "left": 6, "right": 6}, "font_size": 10, "border": {"width": 0.5, "style": "Solid", "color": {"r": 220, "g": 220, "b": 220}}},
    "td-currency": { "padding": {"top": 6, "bottom": 6, "left": 6, "right": 6}, "font_size": 10, "text_align": "Right", "border": {"width": 0.5, "style": "Solid", "color": {"r": 220, "g": 220, "b": 220}}},
    "summaryContainer": { "margin": {"top": 20} },
    "summaryLabel": { "font_size": 11, "text_align": "Right", "margin": {"bottom": 4} },
    "summaryValue": { "font_size": 12, "font_weight": "Bold", "text_align": "Right", "margin": {"bottom": 4} },
    "footer": { "font_size": 9, "color": {"r": 128, "g": 128, "b": 128}, "text_align": "Center" }
  },
  "templates": {
    "recordPage": {
      "name": "recordPage",
      "children": [
        { "type": "Text", "content": "Transaction Summary", "style": "pageTitle" },
        {
          "type": "Container", "style": "headerBox",
          "children": [
            { "type": "Text", "content": "{{user.name}}", "style": "userName" },
            { "type": "Text", "content": "Account: {{user.account}}", "style": "accountInfo" }
          ]
        },
        { "type": "Text", "content": "Details:", "style": "userName" },
        { "type": "Rectangle", "style": "hr" },
        {
          "type": "Table", "data_source": "/items",
          "columns": [
            { "header": "Item Description", "data_field": "/description", "header_style": "th", "style": "td" },
            { "header": "Qty", "data_field": "/quantity", "header_style": "th", "style": "td-currency" },
            { "header": "Unit Price", "data_field": "/price", "header_style": "th", "style": "td-currency", "content_template": "{{formatCurrency price}}" },
            { "header": "Total", "data_field": "/line_total", "header_style": "th", "style": "td-currency", "content_template": "{{formatCurrency line_total}}" }
          ]
        },
        {
          "type": "Container", "style": "summaryContainer",
          "children": [
            { "type": "Text", "content": "Subtotal: {{formatCurrency summary.total}}", "style": "summaryLabel" },
            { "type": "Text", "content": "Tax (8%): {{formatCurrency summary.tax}}", "style": "summaryLabel" },
            { "type": "Text", "content": "Grand Total: {{formatCurrency summary.grand_total}}", "style": "summaryValue" }
          ]
        }
      ]
    }
  },
  "page_sequences": {
    "main_sequence": { "template": "recordPage", "data_source": "/records" }
  }
}