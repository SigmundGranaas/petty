{
  "page": {
    "size": "Letter",
    "margins": { "top": 50, "right": 50, "bottom": 50, "left": 50 },
    "footer_height": 30,
    "footer_text": "Page %p of %t | {{companyName}} - Confidential",
    "footer_style": "footerStyle"
  },
  "styles": {
    "coverTitle": { "font_size": 36, "font_weight": "Bold", "color": {"r": 20, "g": 40, "b": 80}, "margin": {"bottom": 10}},
    "coverSubtitle": { "font_size": 24, "color": {"r": 100, "g": 100, "b": 100}, "margin": {"bottom": 5}},
    "coverDate": { "font_size": 14, "color": {"r": 100, "g": 100, "b": 100}, "margin": {"bottom": 80}},
    "sectionTitle": { "font_size": 18, "font_weight": "Bold", "color": {"r": 20, "g": 40, "b": 80}, "margin": {"top": 20, "bottom": 15}},
    "tableTitle": { "font_size": 14, "font_weight": "Bold", "margin": {"bottom": 10}},
    "footerStyle": { "font_size": 9, "color": {"r": 150, "g": 150, "b": 150}, "text_align": "Center"},

    "th": { "font_weight": "Bold", "padding": {"top": 6, "bottom": 6, "left": 5, "right": 5}, "border": {"width": 0.5, "style": "Solid", "color": {"r": 200, "g": 200, "b": 200}}},
    "td": { "padding": {"top": 4, "bottom": 4, "left": 5, "right": 5}},
    "td-currency": { "padding": {"top": 4, "bottom": 4, "left": 5, "right": 5}, "text_align": "Right"},

    "item-td": {},
    "item-td-currency": {},

    "subtotal-td": { "font_weight": "Bold" },
    "subtotal-td-currency": { "font_weight": "Bold", "border": {"width": 1.0, "style": "Solid", "color": {"r": 50, "g": 50, "b": 50}}},

    "total-td": { "font_weight": "Bold" },
    "total-td-currency": { "font_weight": "Bold", "border": {"width": 1.5, "style": "Double", "color": {"r": 0, "g": 0, "b": 0}}}
  },
  "templates": {
    "report": {
      "name": "report",
      "children": [
        { "type": "Text", "content": "{{companyName}}", "style": "coverTitle" },
        { "type": "Text", "content": "{{reportTitle}}", "style": "coverSubtitle" },
        { "type": "Text", "content": "{{reportDate}}", "style": "coverDate" },
        {
          "type": "Container",
          "children": [
            { "type": "Text", "content": "{{title}}", "style": "sectionTitle" },
            {
              "type": "Container",
              "children": [
                { "type": "Text", "content": "{{#if title}}{{title}}{{/if}}", "style": "tableTitle" },
                {
                  "type": "Table",
                  "data_source": "/data",
                  "row_style_prefix_field": "/type",
                  "columns": [
                    { "header": "Item", "data_field": "/label", "header_style": "th", "style": "td" },
                    { "header": "Amount (USD)", "data_field": "/value", "header_style": "th", "style": "td-currency", "content_template": "{{formatCurrency value}}"}
                  ]
                }
              ],
              "data_source": "/tables"
            }
          ],
          "data_source": "/sections"
        }
      ]
    }
  },
  "page_sequences": {
    "main": { "template": "report", "data_source": "/" }
  }
}